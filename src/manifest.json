{
    "name": "Messenger Twitch Emotes",
    "version": "0.0.4",
    "description": "Twitch emotes in messenger",
    "permissions": [
        "storage",
        "activeTab",
        "https://api.twitchemotes.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.messenger.com/t/*"
            ],
            "run_at": "document_idle",
            "js": [
                "content_script.js"
            ]
        }
    ],
    "manifest_version": 2
}